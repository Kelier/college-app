    <FrameLayout
        android:id="@+id/fragment_question_list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/fragment_quesionlist_sub_listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@color/white"
            android:divider="@color/list_divide_color"
            android:dividerHeight="0.0dip"
            android:fadingEdge="none"
            android:fadingEdgeLength="0.0dip"
            android:headerDividersEnabled="false"
            android:listSelector="@color/transparent"
            android:overScrollMode="never"
            android:persistentDrawingCache="scrolling"
            android:scrollbarStyle="insideOverlay"
            android:scrollbarThumbVertical="@drawable/list_scrollbar"
            android:smoothScrollbar="true" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30.0dip"
        android:layout_marginRight="14.0dip"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/to_top_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="13.0dip"
            android:background="@null"
            android:src="@drawable/qa_topview_selector"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/question_add_btn"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@null"
            android:clickable="true"
            android:src="@drawable/qa_add_question_selector"
            android:visibility="visible" />
    </LinearLayout>
