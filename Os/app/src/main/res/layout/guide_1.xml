<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:id="@+id/guide"
    android:gravity="center">

    <ImageView
        android:id="@+id/guide_1_select_college"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18.0dip"
        android:src="@drawable/guide_done_btn_selector" />

    <RelativeLayout
        android:id="@+id/welcome_guide_cover_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#80000000"
        android:clickable="true"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="15.0dip"
            android:background="@null"
            android:src="@drawable/homeguide_close_btn" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="105.0dip"
            android:background="@null"
            android:src="@drawable/homeguide_exammark" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/top_view"
            android:layout_width="fill_parent"
            android:layout_height="296.0dip"
            android:background="#fff0f0f0"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12.0dip"
                    android:gravity="center"
                    android:text="我的分数"
                    android:textColor="@color/black_text"
                    android:textSize="16.0sp" />
            <!--
                <com.wan.college.ui.MyScoreAdjustView
                    android:id="@+id/my_score_view2"
                    android:layout_width="fill_parent"
                    android:layout_height="204.0dip"
                    android:layout_marginTop="48.0dip" />-->
                <LinearLayout
                    android:id="@+id/my_score_view"
                    android:layout_marginTop="48.0dip"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="204.0dip">
                    <RelativeLayout
                        android:layout_width="204.0dip"
                        android:layout_height="204.0dip"
                        android:background="@mipmap/recommend_pie_chart_bg"
                        android:id="@+id/college_num_pie_bg"
                        android:layout_centerHorizontal="true">
                        <RelativeLayout
                            android:id="@+id/score_container"
                            android:layout_width="100dp"
                            android:layout_height="70dp"
                            android:layout_centerInParent="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/my_score"
                                android:textSize="44sp"
                                android:textColor="#ff6a6a6a"
                                android:gravity="center_vertical"
                                android:layout_centerHorizontal="true"/>


                            <com.romainpiel.shimmer.ShimmerTextView
                                android:id="@+id/shimmer_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="点击设置分数"
                                android:textSize="9.0sp"
                                android:layout_below="@id/my_score"
                                android:layout_gravity="center"
                                android:textColor="#ffa0a0a0"
                                android:layout_centerHorizontal="true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="分"
                                android:textSize="9.0sp"
                                android:layout_marginTop="12dp"
                                android:layout_toEndOf="@+id/my_score"
                                android:id="@+id/textView5" />

                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:text="0"
                    android:textColor="@color/gray_text_color"
                    android:textSize="13.0sp" />

                <View
                    android:layout_width="1.0px"
                    android:layout_height="20.0dip"
                    android:layout_marginLeft="9.0dip"
                    android:layout_marginRight="9.0dip"
                    android:background="@color/batch_item_text_color" />

                <TextView
                    android:id="@+id/max_score_view"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="left"
                    android:text="750分"
                    android:textColor="@color/gray_text_color"
                    android:textSize="13.0sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/guide_1_line_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="94.0dip"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/science_container"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="10.0dip"
                android:duplicateParentState="false"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="49.0dip"
                    android:layout_height="53.0dip">

                    <ImageView
                        android:layout_width="47.0dip"
                        android:layout_height="53.0dip"
                        android:background="@drawable/guide_subject_science_btn_selector" />

                    <ImageView
                        android:id="@+id/science_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/guide_select_unchooseen"
                        android:visibility="visible" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/science_des"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:padding="0.0dip"
                    android:text="理科生"
                    android:textColor="@color/subject_text_color_selector"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55.0dip"
                android:layout_marginRight="55.0dip"
                android:layout_marginTop="37.0dip"
                android:src="@drawable/guide_or" />

            <LinearLayout
                android:id="@+id/art_container"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="10.0dip"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="49.0dip"
                    android:layout_height="53.0dip">

                    <ImageView
                        android:layout_width="47.0dip"
                        android:layout_height="53.0dip"
                        android:background="@drawable/guide_subject_art_btn_selector" />

                    <ImageView
                        android:id="@+id/art_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/guide_select_unchooseen"
                        android:visibility="visible" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/art_des"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:padding="0.0dip"
                    android:text="文科生"
                    android:textColor="@color/subject_text_color_selector"
                    android:textSize="12.0sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="11.0dip"
            android:layout_marginRight="11.0dip"
            android:background="#ffd5d5d5" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:clickable="true"
            android:id="@+id/item_province"
            android:background="@drawable/list_item_selector">

            <TextView
                android:id="@+id/my_province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="13dp"
                android:layout_toStartOf="@+id/next_step4"
                android:gravity="center" />

            <ImageView
                android:id="@+id/next_step3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:background="@drawable/list_next_step_btn_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="26dp"
                android:textColor="@color/text_black"
                android:paddingLeft="5dp"
                android:text="@string/examination_region" />

            <ImageView
                android:id="@id/next_step4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:background="@drawable/guidepage_location"
                android:layout_alignTop="@id/next_step3"
                android:layout_toStartOf="@id/next_step3" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="11.0dip"
            android:layout_marginRight="11.0dip"
            android:background="#ffd5d5d5" />
    </LinearLayout>
</RelativeLayout>