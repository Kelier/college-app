<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_weight="1">

    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <!--云-->
        <!--书架-->
        <!--新的知识殿堂-->

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/intro3_item_1"
            app:x_in="1.5"
            app:x_out="1.5"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="51dp"
            android:layout_marginTop="35dp" />

        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:src="@drawable/intro3_item_2"
            app:x_in="1.2"
            app:x_out="1.2"


            android:layout_below="@+id/iv_5"
            android:layout_marginTop="11dp"
            android:layout_alignStart="@+id/iv_5" />

        <ImageView
            android:id="@+id/iv_5"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:src="@drawable/intro3_item_5"
            app:x_in="1.1"
            app:x_out="1.1"


            android:layout_marginTop="13dp"
            android:layout_alignTop="@+id/iv_1"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
            android:id="@+id/iv_0"
            android:layout_width="100dp"
            android:layout_height="18dp"


            android:src="@drawable/intro3_item_0"
            app:x_in="1.2"
            app:x_out="1.2"
                android:layout_marginTop="11dp"
                android:layout_below="@+id/iv_6"
                android:layout_alignStart="@+id/iv_6" />

            <ImageView
                android:id="@+id/iv_6"
                android:layout_width="220dp"
                android:layout_height="100dp"

                android:src="@drawable/intro3_item_6"
                app:a_in="0.8"
                app:a_out="0.8"
                app:x_in="0.8"
                app:x_out="0.8"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/iv_7"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/intro3_item_7"
                android:scaleType="fitXY"
                app:x_in="1"
                app:x_out="1"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/iv_3"
                android:layout_width="82dp"
                android:layout_height="56dp"
                android:src="@drawable/intro3_item_3"
                app:x_in="1.3"
                app:x_out="1.3"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </LinearLayout>
    <!--

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">











    </RelativeLayout>
    -->
</LinearLayout>