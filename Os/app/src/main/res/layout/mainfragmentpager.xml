<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/top_bar"
        android:id="@+id/nav_actionbar"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="328dp"
        android:layout_above="@+id/ll_Navigation"
        android:layout_weight="1.34"
        android:background="@color/white" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_border">

        <RelativeLayout
            android:id="@+id/message_layout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_centerHorizontal="true">

                <Button
                    android:id="@+id/btnFriendList"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/icon_home_nor"
                    android:layout_gravity="center_horizontal"
                    android:text="" />

                <TextView
                    android:id="@+id/message_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="资讯"
                    android:textSize="10dp"
                    android:textColor="#82858b" />
            </LinearLayout>
        </RelativeLayout>

   
         <RelativeLayout
            android:id="@+id/contacts_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_centerHorizontal="true">

                <Button
                    android:id="@+id/btnGroupChat"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/icon_find_nor"
                    android:layout_gravity="center_horizontal"
                    android:text="" />

                <TextView
                    android:id="@+id/contacts_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="发现"
                    android:textSize="10dp"
                    android:textColor="#82858b" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/news_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btnTopicList"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/icon_help_nor"
                    android:layout_gravity="center_horizontal"
                    android:text="" />

                <TextView
                    android:id="@+id/helps_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="辅助"
                    android:textSize="10dp"
                    android:textColor="#82858b" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>