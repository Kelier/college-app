<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/personality_test_expand_group_bg_color"
    android:orientation="vertical">

    <View
        android:id="@+id/top_line"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="40.0dip"
        android:background="@drawable/question_list_dashline"
        android:layerType="software" />

    <RelativeLayout
        android:id="@+id/answer_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dip"
        android:layout_marginRight="14.0dip"
        android:minHeight="44.0dip"
        android:paddingBottom="14.5dip"
        android:paddingTop="14.5dip">

        <TextView
            android:id="@+id/answer_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:includeFontPadding="false"
            android:textColor="@color/wallet_listitem_text_color"
            android:textSize="15.0dip" />

        <TextView
            android:id="@+id/answer_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/answer_index"
            android:includeFontPadding="false"
            android:lineSpacingExtra="4.0dip"
            android:textColor="@color/wallet_listitem_text_color"
            android:textSize="15.0dip" />
    </RelativeLayout>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/list_divide_color"
        android:visibility="gone" />
</LinearLayout>