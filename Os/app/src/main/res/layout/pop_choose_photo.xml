<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical" >

    <!-- 这里的linearLayout加android:background=""这个属性要谨慎，如果加了后，popwindow是不能半透明了的 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radio_photo">

            <RadioButton
                android:id="@+id/popup_btn_camera"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:clickable="true"
                android:button="@null"
                android:background="@drawable/pop_cornerbtn_selector"
                android:textColor="@color/base_shallow_black"
                android:textSize="16sp"
                android:text="拍照" />
            <RadioButton
                android:id="@+id/popup_btn_gallery"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:clickable="true"
                android:button="@null"
                android:background="@drawable/pop_radiobtn_selector"
                android:textColor="@color/base_shallow_black"
                android:textSize="16sp"
                android:text="从相册选择" />

            <RadioButton
                android:id="@+id/popup_btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:clickable="true"
                android:button="@null"
                android:background="@drawable/pop_radiobtn_selector"
                android:textColor="@color/base_shallow_black"
                android:textSize="16sp"
                android:text="取消" />

        </RadioGroup>


    </LinearLayout>
</LinearLayout>