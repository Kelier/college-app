<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#80000000"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/college_category_select_height"
        android:background="#fffcfcfc"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/major_second_container"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <ListView
                android:id="@+id/major_second_level_listview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white"
                android:cacheColorHint="@color/white"
                android:divider="@null"
                android:fadingEdge="none"
                android:fadingEdgeLength="0.0dip"
                android:listSelector="@drawable/type_select_list_item_selector"
                android:overScrollMode="never"
                android:paddingLeft="@dimen/college_categorize_list_left_dist"
                android:persistentDrawingCache="scrolling"
                android:scrollbarStyle="insideOverlay"
                android:scrollbarThumbVertical="@drawable/list_scrollbar"
                android:smoothScrollbar="true" />
            <!--
           <com.lexue.zhiyuan.view.error.DefaultErrorView
               android:id="@id/major_second_error_view"
               android:layout_width="fill_parent"
               android:layout_height="fill_parent" />
               -->
   </FrameLayout>

   <View
       android:id="@+id/major_space_line"
       android:layout_width="1.0px"
       android:layout_height="fill_parent"
       android:background="@color/common_line_bg"
       android:visibility="gone" />

   <FrameLayout
       android:id="@+id/major_third_container"
       android:layout_width="0.0dip"
       android:layout_height="fill_parent"
       android:layout_weight="1.0"
       android:visibility="gone">

       <ListView
           android:id="@+id/major_third_level_listview"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:background="@color/white"
           android:cacheColorHint="@color/white"
           android:divider="@null"
           android:fadingEdge="none"
           android:fadingEdgeLength="0.0dip"
           android:listSelector="@drawable/type_select_list_item_selector"
           android:overScrollMode="never"
           android:paddingLeft="@dimen/college_categorize_list_left_dist"
           android:persistentDrawingCache="scrolling"
           android:scrollbarStyle="insideOverlay"
           android:scrollbarThumbVertical="@drawable/list_scrollbar"
           android:smoothScrollbar="true" />
       <!--
       <com.lexue.zhiyuan.view.error.DefaultErrorView
           android:id="@id/major_third_error_view"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent" />-->
   </FrameLayout>
</LinearLayout>
<!--
<FrameLayout
   android:id="@+id/major_categorize_dismiss_view"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:background="@null" />
   -->
</LinearLayout>