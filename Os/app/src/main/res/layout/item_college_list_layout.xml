<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/college_list_item"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/list_item_selector"
    android:clickable="true"
    android:paddingLeft="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/college_logo"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="-5dp"
        android:layout_toEndOf="@id/college_logo">

        <TextView
            android:id="@+id/college_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="清华大学"
            android:textColor="@color/text_black"
            android:textSize="14sp" />
        <!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="14sp"
            android:textColor="@color/text_black"
            android:text="No.1"
            android:textStyle="bold"
            android:layout_alignParentEnd="true" />-->
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/college_score_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@id/college_logo"
        android:gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expect_score_tip"
            android:textColor="@color/gray_text_color"
            android:textSize="11.0sp" />

        <TextView
            android:id="@+id/admission_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="476"
            android:textColor="#ffff6c00"
            android:textSize="20.0sp" />

        <TextView
            android:id="@+id/admisson_prob_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40.0dip"
            android:text="@string/admission_probility_tip"
            android:textColor="@color/gray_text_color"
            android:textSize="11.0sp" />

        <TextView
            android:id="@+id/admisson_prob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99%"
            android:textColor="#ffff6c00"
            android:textSize="11.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/college_score_container"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@id/college_logo">

        <TextView
            android:id="@+id/college_tag1"
            style="@style/college_Textview_Style2" />

        <TextView
            android:id="@+id/college_tag2"
            style="@style/college_Textview_Style2" />

        <TextView
            android:id="@+id/college_tag3"
            style="@style/college_Textview_Style2" />

        <TextView
            android:id="@+id/college_tag4"
            style="@style/college_Textview_Style2" />

        <TextView
            android:id="@+id/college_tag5"
            style="@style/college_Textview_Style2" />

        <TextView
            android:id="@+id/college_tag6"
            style="@style/college_Textview_Style2" />

        <TextView
            android:id="@+id/college_tag7"
            style="@style/college_Textview_Style2" />
    </LinearLayout>

    <ImageView
        android:id="@+id/college_logo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/c1107" />

    <LinearLayout
        android:id="@+id/interest_add"
        android:clickable="true"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/interest_view"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:background="@drawable/follow_btn_normal" />

        <TextView
            android:id="@+id/interest_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="5.0dip"
            android:text="关注"
            android:textColor="@color/gray_text_color"
            android:textSize="11.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rv_discovery_bottomborder"></LinearLayout>
</RelativeLayout>

