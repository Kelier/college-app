<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="#ffd5d5d5" />

    <LinearLayout
        android:id="@+id/intro_loading_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:minHeight="200.0dip"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@id/errorview_loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7.0dip"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/college_detail_no_data"
            android:textColor="@color/gray_text_color"
            android:textSize="12.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/intro_data_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/master_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange_text_color"
                    android:text="0"
                    android:textSize="36.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="硕士点"
                    android:textColor="@color/gray_text_color"
                    android:textSize="10.0sp" />
            </LinearLayout>

            <View
                android:layout_width="1.0px"
                android:layout_height="32.0dip"
                android:background="@color/vertical_line_bg" />

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/doctor_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange_text_color"
                    android:text="0"
                    android:textSize="36.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="博士点"
                    android:textColor="@color/gray_text_color"
                    android:textSize="10.0sp" />
            </LinearLayout>

            <View
                android:layout_width="1.0px"
                android:layout_height="32.0dip"
                android:background="@color/vertical_line_bg" />

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/important_major_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange_text_color"
                    android:text="0"
                    android:textSize="36.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重点学科"
                    android:textColor="@color/gray_text_color"
                    android:textSize="10.0sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="#ffd5d5d5" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="124.0dip"
            android:background="#fffafafa"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="12.0dip">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="62.0dip"
                    android:layout_height="81.0dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/guide_liberalarts" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="23.0dip"
                    android:layout_marginTop="-5.0dip"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="女生数"
                    android:textColor="@color/gray_text_color"
                    android:textSize="11.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="80.0dip"
                    android:layout_height="81.0dip"
                    android:gravity="center"
                    android:paddingTop="5.0dip"
                    android:text="VS"
                    android:textColor="#ffff6c00"
                    android:textSize="36.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sex_rate"
                    android:text="0:0"
                    android:layout_width="wrap_content"
                    android:layout_height="23.0dip"
                    android:layout_marginTop="-7.0dip"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:padding="0.0dip"
                    android:textColor="#ffc1c1c1"
                    android:textSize="20.0sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="62.0dip"
                    android:layout_height="81.0dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/guide_science" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="23.0dip"
                    android:layout_marginTop="-5.0dip"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="男生数"
                    android:textColor="@color/gray_text_color"
                    android:textSize="11.0sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="#ffd5d5d5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15.0dip"
                android:paddingRight="60.0dip"
                android:paddingTop="10.0dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9.0dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="隶属："
                        android:textColor="@color/gray_text_color"
                        android:textSize="@dimen/college_intro_text_size" />

                    <TextView
                        android:id="@+id/belong_to"
                        android:text="教育部"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/gray_text_color"
                        android:textSize="@dimen/college_intro_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="类型："
                        android:textColor="@color/gray_text_color"
                        android:textSize="@dimen/college_intro_text_size" />

                    <TextView
                        android:id="@+id/college_type"
                        android:text="理工类"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_text_color"
                        android:textSize="@dimen/college_intro_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地址："
                        android:textColor="@color/gray_text_color"
                        android:textSize="@dimen/college_intro_text_size" />

                    <TextView
                        android:id="@+id/college_addr"
                        android:text="北京市海淀区清华园1号"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_text_color"
                        android:textSize="@dimen/college_intro_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电话："
                        android:textColor="@color/gray_text_color"
                        android:textSize="@dimen/college_intro_text_size" />

                    <TextView
                        android:id="@+id/college_tel"
                        android:text="010-62782051"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_text_color"
                        android:textSize="@dimen/college_intro_text_size" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/call_phone_btn"
                android:layout_width="38.0dip"
                android:layout_height="38.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15.0dip"
                android:scaleType="centerCrop"
                android:src="@drawable/call_phone_btn_selector" />
        </RelativeLayout>

        <cn.carbs.android.expandabletextview.library.ExpandableTextView
            android:id="@+id/expandable_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="4.0dip"
            custom:etv_MaxLinesOnShrink="9"
            android:textSize="@dimen/college_intro_text_size"/>

        <LinearLayout
            android:id="@+id/relative_major_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/special_major"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/common_line_bg" />

                <TextView
                    android:id="@+id/special_major_title"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:drawableRight="@drawable/xiala_icon_turn180"
                    android:gravity="center_vertical"
                    android:paddingLeft="15.0dip"
                    android:paddingRight="18.0dip"
                    android:text="特色专业"
                    android:clickable="true"
                    android:textColor="#ff2a2a2a"
                    android:textSize="13.0sp" />

                <View
                    android:id="@+id/special_major_bottom_divider"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/common_line_bg" />

                <com.wan.college.ui.MajorListView
                    android:id="@+id/special_major_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fffafafa"
                    android:cacheColorHint="@color/white"
                    android:divider="@color/list_divide_color"
                    android:dividerHeight="1.0px"
                    android:listSelector="#00000000"
                    android:overScrollMode="never" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/important_major"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/common_line_bg" />

                <TextView
                    android:id="@+id/important_major_title"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:drawableRight="@drawable/xiala_icon_turn180"
                    android:gravity="center_vertical"
                    android:paddingLeft="15.0dip"
                    android:paddingRight="18.0dip"
                    android:text="重点专业"
                    android:clickable="true"
                    android:textColor="#ff2a2a2a"
                    android:textSize="13.0sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/common_line_bg" />

                <com.wan.college.ui.MajorListView
                    android:id="@+id/important_major_list_view"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fffafafa"
                    android:cacheColorHint="@color/white"
                    android:divider="@color/list_divide_color"
                    android:dividerHeight="1.0px"
                    android:listSelector="#00000000"
                    android:overScrollMode="never" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>