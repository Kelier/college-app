<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/zixun_card"
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_height="130dp"
        app:contentPaddingBottom="5dp"
        app:contentPaddingTop="5dp"
        app:contentPaddingLeft="5dp"
        app:contentPaddingRight="5dp"
        app:cardElevation="3dp"
        android:clickable="true"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
        <ImageView
            android:id="@+id/zixun_bg"
            android:layout_width="150dp"
            android:layout_height="match_parent"/>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="8dp">

              <TextView
                  android:id="@+id/zixun_title"
                  android:layout_width="match_parent"
                  android:layout_height="30dp"
                  android:gravity="center_vertical"
                  android:textColor="@color/text_black"
                  android:textSize="18sp"
                  android:maxLines="1"
                  android:text="给高考家长们的饮食健康"
                  android:ellipsize="end"
                  android:layout_alignParentTop="true"
                  android:layout_alignParentStart="true" />

              <TextView
                  android:id="@+id/zixun_subtitle"
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:gravity="center_vertical"
                  android:textColor="@color/text_gray"
                  android:maxLines="3"
                  android:textSize="14sp"
                  android:ellipsize="end"
                  android:text="给高考家长们的饮食健康使得房价快速大幅适当放松放松法国人铁合金放松的放松放松放松放松放松的房贷首付三分"
                  android:layout_below="@id/zixun_title"/>

              <TextView
                  android:id="@+id/zixun_thirdtitle"
                  android:layout_width="60dp"
                  android:layout_height="15dp"
                  android:gravity="center"
                  android:background="@color/color_theme"
                  android:textColor="@color/white"
                  android:textSize="11sp"
                  android:text="高考饮食"
                  android:layout_alignParentBottom="true"/>

              <TextView
                  android:layout_width="30dp"
                  android:layout_height="15dp"
                  android:gravity="center"
                  android:textColor="@color/gray_text_color"
                  android:textSize="11sp"
                  android:text="阅读"
                  android:layout_toLeftOf="@+id/zixun_read_num"
                  android:layout_alignParentBottom="true"/>
              <TextView
                  android:id="@id/zixun_read_num"
                  android:layout_width="40dp"
                  android:layout_height="15dp"
                  android:gravity="center"
                  android:textColor="@color/gray_text_color"
                  android:textSize="11sp"
                  android:text="99944"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentBottom="true"/>

          </RelativeLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>